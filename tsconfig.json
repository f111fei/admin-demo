{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2016",
        "lib": [
            "es2016", "dom"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    },
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}